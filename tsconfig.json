{
    "extends": "@egomobile/tsconfig",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": false
    },
    "exclude": [
        "node_modules",
        "sandbox"
    ]
}